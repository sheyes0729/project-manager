{
  "name": "project-manager",
  "productName": "Project Manager",
  "version": "1.0.0",
  "description": "一个基于 Electron + Vue3 + Typescript 开发的项目管理器，主要包括项目扫描、IDE 绑定、Node 版本管理、TodoList 等功能",
  "main": "./out/main/index.js",
  "author": "sheyes0729<sheyes0729@163.com>",
  "homepage": "https://github.com/sheyes0729/project-manager",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && rimraf dist && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win32": "npm run build && electron-builder --win --ia32 --config",
    "build:win64": "npm run build && electron-builder --win --x64 --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "create:icons": "electron-icon-builder --input ./resources/icon.png --output=./ --flatten",
    "publish": "electron-builder --win --ia32 --x64 -p always"
  },
  "dependencies": {
    "@commonify/lowdb": "^3.0.0",
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^1.0.2",
    "@rive-app/canvas": "^2.7.3",
    "electron-updater": "^5.3.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@layui/layui-vue": "^2.11.5",
    "@rushstack/eslint-patch": "^1.3.2",
    "@types/lodash": "^4.14.196",
    "@types/node": "^18.16.19",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vueuse/core": "^10.2.1",
    "dayjs": "^1.11.10",
    "electron": "^24.6.2",
    "electron-builder": "^23.6.0",
    "electron-icon-builder": "^2.0.1",
    "electron-log": "^4.4.8",
    "electron-vite": "^1.0.25",
    "element-plus": "^2.4.2",
    "eslint": "^8.44.0",
    "eslint-plugin-vue": "^9.15.1",
    "less": "^4.2.0",
    "prettier": "^2.8.8",
    "qalendar": "^3.5.1",
    "rimraf": "^5.0.1",
    "sass": "^1.64.1",
    "typescript": "^5.1.6",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-vue-components": "^0.25.1",
    "view-ui-plus": "^1.3.14",
    "vite": "^4.4.2",
    "vite-plugin-pages": "^0.31.0",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-layouts": "^0.8.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "vue-tsc": "^1.8.4",
    "vue3-eventbus": "^2.0.0"
  }
}
